  [insertion_syntax]
    type = RunApp
    input = 'msre_insertion.i'
    check_input = true
    cli_args = '--app SamApp'
    executable_pattern = 'sam*|blue_crab*'
  []

  [steady_state]
    type = 'CSVDiff'
    input = 'msre_pke_ss.i'
    csvdiff = 'msre_pke_ss_csv.csv'
    cli_args = '--app SamApp Executioner/num_steps=150'
    executable_pattern = 'sam*|blue_crab*'
